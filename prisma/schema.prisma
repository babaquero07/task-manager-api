model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  status      String    @default("pendiente")
  priority    Int       @default(3)
  dueDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
